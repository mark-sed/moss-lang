import re

re.replace(r"a", "x", "banana") // "bxnxnx"
"\n"
re.replace(r"a", "x", "banana", count=1) // "bxnana"
"\n"
re.replace(r"\d+", "#", "abc123def456") // "abc#def#"
"\n"
re.replace(r"\d+", "#", "abc123def456", count=1) // "abc#def456"
"\n"
re.replace(r"(ab)(cd)", r"$2$1", "abcd") // "cdab"
"\n"
re.replace(r"\s+", " ", "a   b\tc\n") // "a b c "
"\n"
re.replace(r"^abc", "X", "abcdef") // "Xdef"
"\n"
re.replace(r"abc$", "X", "123abc") // "123X"
"\n"
re.replace(r".", "-", "") // ""
"\n"
re.replace(r"a*", "X", "bbb") // "XbXbXbX"
"\n"
re.replace(r"(.)\1+", r"$1", "aaabbbcc") // "abc"
"\n"
re.replace(r"[A-Z]", "", "AbC123") // "b123"
"\n"